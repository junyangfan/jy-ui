{
	"github": {
		"release": false
	},
	"git": {
		"commitMessage": "release: 🍫 v${version}"
	},
	"npm": {
		"publish": false
	},
	"hooks": {
		"after:bump": "echo 更新版本成功"
	},
	"plugins": {
		"@release-it/conventional-changelog": {
			"preset": {
				"name": "conventionalcommits",
				"type": [
					{
						"type": "feat",
						"section": "feat:     🚀  新增功能"
					},
					{
						"type": "fix",
						"name": "fix:      🧩  修复缺陷"
					},
					{
						"type": "docs",
						"section": "docs:     📚  文档变更"
					},
					{
						"type": "style",
						"section": "style:    🎨  代码格式（不影响功能，例如空格、分号等格式修正）"
					},
					{
						"type": "refactor",
						"section": "refactor: ♻️   代码重构（不包括 bug 修复、功能新增）"
					},
					{
						"type": "perf",
						"section": "perf:     ⚡️  性能优化"
					},
					{
						"type": "test",
						"section": "test:     ✅  添加疏漏测试或已有测试改动"
					},
					{
						"type": "build",
						"section": "build:    📦️  构建流程、外部依赖变更（如升级 npm 包、修改 webpack 配置等）"
					},
					{
						"type": "ci",
						"section": "ci:       🎡  修改 CI 配置、脚本"
					},
					{
						"type": "chore",
						"section": "chore:    🔨  对构建过程或辅助工具和库的更改（不影响源文件、测试用例）"
					},
					{
						"type": "revert",
						"section": "revert:   ⏪️  回滚 commit"
					}
				]
			},
			"infile": "CHANGELOG.md"
		}
	}
}
